{
    "name": "ts-vue",
    "version": "0.5.1",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve --open",
        "build": "vue-cli-service build --modern",
        "build-dev": "vue-cli-service build --modern --mode development",
        "build-staging": "vue-cli-service build --modern --mode staging",
        "build-testing": "vue-cli-service build --modern --mode testing",
        "build-pre": "vue-cli-service build --modern --mode pre",
        "test:unit": "vue-cli-service test:unit",
        "lint": "vue-cli-service lint",
        "analyze": "vue-cli-service build --modern --report",
        "preview": "cd dist && npx http-server -a 127.0.0.1 -p 7000",
        "prettier": "prettier --write 'src/**/*.{vue,ts,js,less,css,scss}'"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "core-js": "^3.4.3",
        "date-fns": "^2.8.1",
        "echarts": "^4.6.0",
        "element-ui": "^2.4.5",
        "gcoord": "^0.2.3",
        "lodash-es": "^4.17.15",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "vue": "^2.6.10",
        "vue-property-decorator": "^8.3.0",
        "vue-router": "^3.1.3",
        "vuex": "^3.1.2",
        "vuex-class": "^0.3.2",
        "vuex-module-decorators": "^0.11.0"
    },
    "devDependencies": {
        "@types/baidumap-web-sdk": "^2.0.3",
        "@types/echarts": "^4.4.6",
        "@types/jest": "^24.0.19",
        "@types/lodash-es": "^4.17.3",
        "@vue/cli-plugin-babel": "^4.1.0",
        "@vue/cli-plugin-eslint": "^4.1.0",
        "@vue/cli-plugin-router": "^4.1.0",
        "@vue/cli-plugin-typescript": "^4.1.0",
        "@vue/cli-plugin-unit-jest": "^4.1.0",
        "@vue/cli-plugin-vuex": "^4.1.0",
        "@vue/cli-service": "^4.1.0",
        "@vue/eslint-config-prettier": "^5.0.0",
        "@vue/eslint-config-typescript": "^4.0.0",
        "@vue/test-utils": "1.0.0-beta.29",
        "babel-plugin-component": "^1.1.1",
        "eslint": "^5.16.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-vue": "^5.0.0",
        "less": "^3.0.4",
        "less-loader": "^5.0.0",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "style-resources-loader": "^1.3.3",
        "stylelint": "^12.0.1",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-webpack-plugin": "^1.1.2",
        "typescript": "~3.5.3",
        "vue-cli-plugin-element": "^1.0.1",
        "vue-template-compiler": "^2.6.10"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.{js,ts,vue}": [
            "prettier --check",
            "eslint"
        ],
        "src/**/*.{vue,htm,html,css,scss,less}": [
            "stylelint"
        ]
    }
}
